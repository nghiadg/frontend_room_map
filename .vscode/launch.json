{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "DEV: Debug Next.js",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"  // mở cổng debug Node.js
      },
      "port": 9229,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "BUILD: production",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run build && npm run start"
    }
  ]
}
